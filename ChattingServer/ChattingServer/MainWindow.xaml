<Window x:Class="ChattingServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChattingServer"
        mc:Ignorable="d"
        Title="ChattingServer" Height="110" Width="200">
    <Grid>
        <Button x:Name="btStart" Content="Start Server" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="190" Height="50" FontSize="20" FontWeight="Bold" Click="Button_Click"/>
        <TextBlock x:Name="tbUsers" HorizontalAlignment="Right" Margin="00,55,5,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="130" FlowDirection="RightToLeft"/>
        <TextBlock HorizontalAlignment="Left" Margin="5,55,0,0" TextWrapping="Wrap" Text="Users" VerticalAlignment="Top"/>

    </Grid>
</Window>
